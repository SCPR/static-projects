<div id="billdetails" class="{{replaceSpaces bill_id}}">
    <div class="row-fluid">
        <div class="span12">
            <!-- <h2 class="centered">{{title}}</h2> -->
            <h3 id="reporter-title">{{shorttitle}}</h3>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span8">
            <p><strong>Summary of {{!chamberType chamber}}{{bill_id}}</strong>:</p>
            <ul>
                <li><span id="reporter-summary"></span>{{#sources}}<a href="{{url}}" target="_blank"> ... <strong>Read full summary</strong></a>{{/sources}}</li>
            </ul>

            <p><strong>Legislation status</strong>:</p>
            <ul>
                <li><span id="legislation-status"></span></li>
            </ul>

            <p><strong>Legislative Actions</strong><span class="small-display"> (last update: {{dateFormat updated_at}})</span></p>
            <ul>
                {{#actions}}
                    <li><strong>{{dateFormat date}}</strong>: {{action}} ({{chamberType actor}})</li>
                {{/actions}}
            </ul>

            <!--
            <p>
            {{truncate summary 10000 " ... "}}
                {{#sources}}
                    <a href="{{url}}" target="_blank">Read More</a>
                {{/sources}}
            </p>
            -->

        </div>
        <div class="span4">
            <p><strong>Sponsors</strong></p>

            <ul id="legi-sponsors"></ul>

<!--
            <ul>
                {{#sponsors}}
                    <li>{{name}} - ({{capitalizeFirst type}})</li>
                {{/sponsors}}
            </ul>
-->
            <p><strong>Legislative Milestones</strong></p>
            <ul>
                <li><strong>{{dateFormat action_dates.first}}</strong>: First Action</li>
                <li><strong>{{dateFormat action_dates.last}}</strong>: Last Action</li>
                <li><strong>{{dateFormat action_dates.passed_upper}}</strong>: Passed Senate</li>
                <li><strong>{{dateFormat action_dates.passed_lower}}</strong>: Passed Assembly</li>
                <li><strong>{{dateFormat action_dates.signed}}</strong>: Signed into law</li>
            </ul>
        </div>
    </div>


    <div class="row-fluid">
        <div class="span12">
            <a href="javascript:void(0)" onclick="fn.backToTop();"><strong>Return to the top</strong></a>
        </div>
    </div>
</div>