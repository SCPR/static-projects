<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        {{#objects}}
            <div class="col-md-12">
                <div id="{{speaker_first}}_{{speaker_last}}_{{number}}"></div>
            </div>

            <!-- begin row -->
            <div class="row">
                <div class="col-xs-12 col-sm-3 col-sm-offset-1 col-md-4 col-md-offset-1 col-lg-2 col-lg-offset-1">
                    <div class="legi-img">
                        <img src="{{speaker_image_url}}" alt="{{speaker_first}}_{{speaker_last}}" width="100%" class="responsive" />
                        <p class="small-writing hidden-xs"><strong>{{speaker_first}} {{speaker_last}}</strong></p>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-7 col-md-6 col-lg-8">
                    <h5>{{speaker_position}} {{speaker_first}} {{speaker_last}} ({{speaker_party}}-{{speaker_district}})</h5>
                    <p class="small-writing">From remarks titled <strong>{{title}}</strong>, spoken on {{dateFormat date}} in the {{chamber}}.</p>
                    <div class="speech-text">
                        {{#each speaking}}
                        <p>{{this}}</p>
                        {{/each}}
                    </div>
                    <p><a href="{{origin_url}}" target="_blank"><strong>Read Source</strong></a></p>
                </div>
            </div>
            <!-- end row -->

            <hr>
        {{/objects}}
    </div>
</div>