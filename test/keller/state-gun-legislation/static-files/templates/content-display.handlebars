<div id="{{replaceSpaces bill_id}}-details">
    <div class="row-fluid">
        <div class="span12">
            <h2>{{title}}</h2>
            <p><strong>{{!chamberType chamber}}{{bill_id}}</strong>: <span id="reporter-summary"></span>
            {{#sources}}
                <a href="{{url}}" target="_blank"> Read More</a></p>
            {{/sources}}

                <!--
                <p>
                {{truncate summary 10000 " ... "}}
                    {{#sources}}
                        <a href="{{url}}" target="_blank">Read More</a>
                    {{/sources}}
                </p>
                -->

        </div>
    </div>
    <div class="row-fluid">
        <div class="span4">
            <h5>Sponsors</h5>
            <ul>
                {{#sponsors}}
                    <li>{{name}} - ({{capitalizeFirst type}})</li>
                {{/sponsors}}
            </ul>
        </div>
        <div class="span4">
            <h5>Process Dates</h5>
            <ul>
                <li><strong>First Action</strong>: {{dateFormat action_dates.first}}</li>
                <li><strong>Last Action</strong>: {{dateFormat action_dates.last}}</li>
                <li><strong>Passed Senate</strong>: {{dateFormat action_dates.passed_upper}}</li>
                <li><strong>Passed Assembly</strong>: {{dateFormat action_dates.passed_lower}}</li>
                <li><strong>Signed into law</strong>: {{dateFormat action_dates.signed}}</li>
            </ul>
        </div>
        <div class="span4">
            <h5>Legislative Actions</h5>
            <ul>
                {{#actions}}
                    <li><strong>{{dateFormat date}}</strong>: {{action}} ({{chamberType actor}})</li>
                {{/actions}}
            </ul>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <p class="small-display"><strong>Bill information last updated</strong>: {{dateFormat updated_at}}</p>
        </div>
    </div>
</div>