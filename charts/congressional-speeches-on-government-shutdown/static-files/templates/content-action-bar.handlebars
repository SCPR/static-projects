<nav class="visible-desktop">
    <select id="search-congressional-delegation" onchange="scrollToRep(this.value);">
        <option value="#return-to-top">Choose a representative's speech</option>
        {{#objects}}
            <option value="#{{speaker_first}}_{{speaker_last}}_{{number}}">{{speaker_first}} {{speaker_last}} ({{dateFormat date}})</option>
        {{/objects}}
    </select>
</nav>

<script type="text/javascript">
$(document).ready(function() {

	//Calculate the height of <header>
	//Use outerHeight() instead of height() if have padding
    var aboveHeight = $('header').outerHeight();

	// when scroll
    $(window).scroll(function(){

		//if scrolled down more than the header's height
        if ($(window).scrollTop() > aboveHeight){

			// if yes, add "fixed" class to the <nav>
			// add padding top to the #content (value is same as the height of the nav)
            $('nav').addClass('fixed').css('top','100').next().css('padding-top','60px');
        } else {

			// when scroll up or less than aboveHeight, remove the "fixed" class, and the padding-top
            $('nav').removeClass('fixed').next().css('padding-top','0');
        }
    });
});
</script>